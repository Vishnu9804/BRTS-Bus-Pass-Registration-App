<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_status">

    <TextView
        android:id="@+id/status"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/status"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/teal_orange"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_updoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Document"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:padding="20dp"
            android:layout_gravity="left"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/u_updoc"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="20dp" android:layout_gravity="center"
            android:src="@drawable/cancel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_admin_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Document Verification"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:padding="20dp"
            android:layout_gravity="left"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/u_adminverification"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="20dp" android:layout_gravity="center"
            android:src="@drawable/cancel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_sbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Slot Booking"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:padding="20dp"
            android:layout_gravity="left"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/u_sbook"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="20dp" android:layout_gravity="center"
            android:src="@drawable/cancel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_offline_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Offline Verification"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:padding="20dp" android:layout_gravity="left"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/u_offlineverification"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="1"
            android:padding="20dp" android:layout_gravity="center"
            android:src="@drawable/cancel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_eligibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Bus pass eligibility"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:padding="20dp" android:layout_gravity="left"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/u_eligibility"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="1"
            android:padding="20dp" android:layout_gravity="center"
            android:src="@drawable/cancel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_delievery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Delievery"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:padding="20dp"
            android:layout_gravity="left"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/u_delievery"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_row="5"
            android:layout_column="1"
            android:padding="20dp"
            android:layout_gravity="center"
            android:src="@drawable/cancel"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text=""
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:padding="20dp"
            android:layout_gravity="left"
            tools:ignore="MissingConstraints" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>