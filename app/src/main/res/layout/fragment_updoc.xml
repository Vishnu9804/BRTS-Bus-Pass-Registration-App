<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/cordlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_updoc">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".nav_drawer"
        >

        <TextView
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/UploadDocument"
            android:textColor="@color/teal_orange"
            android:textSize="40dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
        <GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:columnCount="2">

            <TextView
                android:id="@+id/tv_aadhar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar Card"
                android:textColor="@color/orange"
                android:textSize="20dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_marginRight="25dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/adhar"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:text="Click to Upload"
                android:singleLine="true"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View PDF"
                android:layout_column="1"
                android:textSize="16dp"
                android:backgroundTint="@color/orange"
                />

            <TextView
                android:id="@+id/tv_elecbill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Electricity Bill"
                android:textColor="@color/orange"
                android:textSize="20dp"
                android:layout_marginRight="25dp"
                tools:ignore="MissingConstraints"
                />

            <Button
                android:id="@+id/choose2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="VIEW PDF"
                android:textSize="16dp"
                android:backgroundTint="@color/orange"
                />

            <TextView
                android:id="@+id/ele"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Click to Upload"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:singleLine="true"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="Photo"
                android:layout_marginRight="25dp"
                android:textColor="@color/orange"
                android:textSize="20dp"
                tools:ignore="MissingConstraints"
                />
            <Button
                android:id="@+id/choose3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW PDF"
                android:layout_column="1"
                android:layout_row="5"
                android:textSize="16dp"
                android:backgroundTint="@color/orange"
                />
            <TextView
                android:id="@+id/passpic"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:text="Click to Upload"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:singleLine="true"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:text="Signature"
                android:textColor="@color/orange"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                tools:ignore="MissingConstraints"
                />

            <Button
                android:id="@+id/choose4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW PDF"
                android:layout_column="1"
                android:layout_row="7"
                android:textSize="16dp"
                android:backgroundTint="@color/orange"
                />

            <TextView
                android:id="@+id/signfile"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="6"
                android:text="Click to Upload"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:singleLine="true"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:text=""
                android:textColor="@color/orange"
                android:textSize="20dp"
                android:layout_marginRight="25dp"
                tools:ignore="MissingConstraints"
                />
            <Button
                android:id="@+id/btn_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW PDF"
                android:textSize="16dp"
                android:layout_column="1"
                android:layout_row="10"
                android:backgroundTint="@color/orange"
                />
            <TextView
                android:id="@+id/tv_doc"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:layout_column="1"
                android:layout_row="8"
                android:text="Click to Upload"
                android:background="@drawable/round_border"
                android:gravity="center"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/linearlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signfile"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                >
            </LinearLayout>

        </GridLayout>

        <Button
            android:id="@+id/btne"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textSize="20dp"
            android:layout_column="1"
            android:layout_row="10"
            android:textColor="@color/black"
            android:backgroundTint="@color/orange"
            app:layout_constraintTop_toBottomOf="@+id/gridlayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnupload"
            android:layout_width="310dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/orange"
            android:layout_marginTop="60dp"
            android:text="SUBMIT"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridlayout"
            tools:ignore="MissingConstraints"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="-14dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="522dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>